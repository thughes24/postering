<%= render '/layouts/title', title: 'Edit Account' %>
<div class='well'>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "control-input" %>
  </div>
  <div class="control-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "control-input" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "control-input" %>
  </div>
  <div class='form-group'>
    <%= f.label :timezone %>
    <%= f.time_zone_select :timezone, /Australia/ %>
  </div>
  <%= f.submit "Update", class: "btn btn-lg btn-warning" %>
<% end %>
</div>

<%= link_to "Back", :back %>